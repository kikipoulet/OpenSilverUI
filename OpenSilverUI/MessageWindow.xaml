<ChildWindow x:Class="OpenSilverUI.MessageWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           Width="400" Height="200" 
           Title="ChildWindow1" Style="{StaticResource MessageBoxStyle}">
    
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DockPanel>
            <TextBlock Margin="0,5,0,0" FontSize="20" FontWeight="DemiBold" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Name="TextBlockTitle" DockPanel.Dock="Top"></TextBlock>
            <TextBlock FontSize="15" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Name="TextBlockMessage" ></TextBlock>
        </DockPanel>

        <Button x:Name="OKButton" Style="{StaticResource PrimaryButton}" Content="OK" Click="OKButton_Click" Width="75" Height="27" HorizontalAlignment="Right" Margin="0,12,0,0" Grid.Row="1" />
    </Grid>
</ChildWindow>